<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walkthrough_background"
    android:padding="64dp">

    <TextView
        android:id="@+id/txt_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="SKIP"
        android:textColor="@color/colorBackground_light"
        app:layout_constraintBottom_toBottomOf="@+id/tab_circle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tab_circle2" />

    <FrameLayout
        android:id="@+id/view_logo_circle"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/logo_circle"
        app:layout_constraintBottom_toBottomOf="@+id/txt_assistant"
        app:layout_constraintEnd_toEndOf="@+id/txt_news"
        app:layout_constraintStart_toStartOf="@+id/txt_news"
        app:layout_constraintTop_toTopOf="@+id/txt_news" />

    <TextView
        android:id="@+id/txt_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/gothic"
        android:text="News"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_assistant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gothic"
        android:text="Assistant"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_news"
        app:layout_constraintStart_toStartOf="@+id/txt_news"
        app:layout_constraintTop_toBottomOf="@+id/txt_news" />

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/gothic"
        android:text="Welcome!"
        android:textColor="@color/colorBackground_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_news"
        app:layout_constraintStart_toStartOf="@+id/txt_news"
        app:layout_constraintTop_toBottomOf="@+id/view_logo_circle" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gothic"
        android:text="@string/welcome_message"
        android:textColor="@color/colorBackground_light"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_welcome" />

    <View
        android:id="@+id/tab_circle2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/logo_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/tab_circle3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/logo_circle"
        app:layout_constraintStart_toEndOf="@+id/tab_circle2"
        app:layout_constraintTop_toTopOf="@+id/tab_circle2" />

    <View
        android:id="@+id/tab_circle1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/logo_circle"
        app:layout_constraintEnd_toStartOf="@+id/tab_circle2"
        app:layout_constraintTop_toTopOf="@+id/tab_circle2" />


</androidx.constraintlayout.widget.ConstraintLayout>

